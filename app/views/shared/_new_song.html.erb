<div class="panel-body" id="new-song-form">
  <%= form_for [@artist, @artist.songs.new] do |s| %>

    <div>
     <!-- <label>Song name</label> -->
     <%= s.text_field :name, placeholder: "Name", class: "form-control", id: "new-song-name" %>
    </div>

    <div>
      <!-- <label>Song year</label> -->
      <%= s.number_field :year, placeholder: "Year", class: "form-control", id: "new-song-year" %>
    </div>

    <div id="<%= @artist.id %>">
      <%= s.submit "Save", class: "btn btn-primary", id: "submit-new-song", data: { disable_with: false } %>
    </div>
  <% end %>
</div>
