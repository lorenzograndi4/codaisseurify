<div class="banner">
  <div class="container">
    <h1>Pavarottify by Lorenzo</h1>
  </div>
</div>

<div class="container">
    <% @artists.each do |a| %>
      <div class="thumb"><%= image_tag a.image %></div>
      <h2><%= link_to "#{a.name}", artist_path(a) %></h2>
      <p>Famous quote: <i><%= a.bio %></i></p>
      <p>Music genre: <strong><%= a.genre.capitalize %></strong></p>
      <p><%= link_to "[Delete #{a.name}]", a, method: :delete, data: {confirm: "Are you really sure?", notice: "Artist deleted!"} %></p>
    <% end %>
</div>
